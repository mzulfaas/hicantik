<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/logo2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/grad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grad"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/profilpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circlebaground">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle"
                    android:padding="19dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/myphoto" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilpic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-light"
                android:text="Dana Pratiwi"
                android:textColor="@color/colorWhite"
                android:textSize="32sp"
                android:textStyle="bold|normal" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kondisi kulit anda saat ini"
                    android:background="@color/colorFix"
                    android:layout_gravity="clip_horizontal"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_horizontal"
                    android:background="@color/colorWhite"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="8dp"
                    android:text="Berminyak"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Informasi Produk yang anda gunakan:"
                    android:background="@color/colorFix"
                    android:layout_gravity="clip_horizontal"
                    android:textSize="25sp"
                    android:fontFamily="@font/cantik2"
                    android:textStyle="bold"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>